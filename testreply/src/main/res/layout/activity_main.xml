<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eshel.imageloader.testreply.MainActivity">

    <com.eshel.imageloader.testreply.ReplyTextView
        android:id="@+id/reply_text_view"
        android:padding="5dp"
        android:background="@drawable/shape_reply_bg"
        android:layout_marginLeft="59dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:reply_text_size="15sp"
        app:reply_photo_show_text="[查看图片]"
        app:reply_photo_show_icon_id="@drawable/icon_reply"
        app:reply_author_text_color="#ff4a4a4a"
        app:reply_photo_show_text_color="#ff33AFED"
        app:reply_content_text_color="#ffA4A4A4"
        app:reply_more_text_color="#ff33AFED"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <Button
        android:id="@+id/btn_update"
        android:text="更新文字"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
